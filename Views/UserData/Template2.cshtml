@model UserData
@{
    ViewData["Title"] = "Template2";
    
}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Right Resume</title>
    
    <link href="/css/template2/font-awesome/css/all.min.css?ver=1.2.0" rel="stylesheet">
    <link href="/css/template2/bootstrap.min.css?ver=1.2.0" rel="stylesheet">
    <link href="/css/template2/aos.css?ver=1.2.0" rel="stylesheet">
    <link href="/css/template2/main.css?ver=1.2.0" rel="stylesheet">

    <link href="https://fontawesome.com/icons/linkedin?f=brands&s=solid" rel="stylesheet">
    <link href="https://fontawesome.com/icons/github?f=brands&s=solid" rel="stylesheet">
    <noscript>
        <style type="text/css">
            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }
        </style>
    </noscript>
</head>
<body id="top">
    
    <div class="page-content">
        <div class="container">
            <div class="cover bg-white" style="height:100px">

                <div class="cover-bg p-3 p-lg-4 text-white">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="hover-effect bg-white shadow-sm " style="width:216px;height: 287px;border: 6px solid white;;padding:0px;margin:0px">
                                <img src="/img/clients/@Model.PersonalInfo.Photo" width="100%" height="100%" /></div>
                        </div>
                        <div class="col-lg-8 col-md-7 text-center text-md-start">
                            <h2 class="h1 mt-2" >@Model.PersonalInfo.Name</h2>
                            <p >@Model.PersonalInfo.JobTitle</p>
                            <div>

                                <a href="@Model.Links.GitHub" target="_blank"><i style="font-size:34px; color:white;   margin: 15px;" class="fa-brands fa-github"></i></a>

                                <a href="@Model.Links.Linkedin" target="_blank"><i style="font-size:34px;color:blue" class="fa-brands fa-linkedin"></i></a>

                            </div>
                            <div class="d-print-none" ><a class="btn btn-light text-dark shadow-sm mt-1 me-1" href="right-resume.pdf" target="_blank" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">Download CV</a></div>
                        </div>
                    </div>
                </div>

                <div class="about-section pt-4 px-3 px-lg-4 mt-1">
                    <div class="row" style="padding:50px 0;margin-left:50px">
                        <div class="col-lg-6">
                            <div class="card-body text-left">
                                <div class="h4 mt-0 title">Objectives</div>
                                <p>@Model.CoverLetter</p>
                                
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card-body" style="margin-left:100px">
                                <div class="h4 mt-0 title">Basic Information</div>
                                <div class="row">
                                    <div class="col-md-3 text-left"><strong class="text-uppercase ">Age</strong></div>
                                    <div class="col-md-8 text-left">@Model.PersonalInfo.Age</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-3 text-left"><strong class="text-uppercase">Email</strong></div>
                                    <div class="col-md-8 text-left"><a style="color:black" href="mailto:@Model.PersonalInfo.Email" target="_blank">@Model.PersonalInfo.Email</a></div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-3 text-left"><strong class="text-uppercase">Phone:</strong></div>
                                    <div class="col-md-8 text-left">@Model.PersonalInfo.Phone</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-3 text-left"><strong class="text-uppercase">Address:</strong></div>
                                    <div class="col-md-8 text-left">@Model.PersonalInfo.Address</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-3 text-left"><strong class="text-uppercase">Language:</strong></div>
                                    <div class="col-md-8 text-left">@Model.PersonalInfo.Languages</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr class="d-print-none" />
                <div class="skills-section px-3 px-lg-4">
                    <h2 class="h3 mb-3" style="margin-top: 70px">Professional Skills</h2>
                    <div class="row" style="margin-left:70px">
                        <div class="col-md-6">
                            @if (@Model.Skill[0].Name != null && @Model.Skill[0].Level != null)
                                    {
                            <div class="mb-2">
                                    <span>@Model.Skill[0].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[0].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[0].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[0].Level %</span>
                                </div>
                            </div>
                                    }


                             @if (@Model.Skill[1].Name != null && @Model.Skill[1].Level != null)
                                    {
                            <div class="mb-2">
                                    <span>@Model.Skill[1].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[1].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[1].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[1].Level %</span>
                                </div>
                            </div>
                                    }

                             @if (@Model.Skill[2].Name != null && @Model.Skill[2].Level != null)
                                    {
                            <div class="mb-2">
                                    <span>@Model.Skill[2].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[2].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[2].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[2].Level %</span>
                                </div>
                            </div>
                                    }
                        </div>
                        <div class="col-md-6">
                            @if (@Model.Skill[3].Name != null && @Model.Skill[3].Level != null)
                            {
                                <div class="mb-2">
                                        <span>@Model.Skill[3].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[3].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[3].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[3].Level %</span>
                                    </div>
                                </div>
                            }
                            @if (@Model.Skill[4].Name != null && @Model.Skill[4].Level != null)
                            {
                                <div class="mb-2">
                                    <span>@Model.Skill[4].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[4].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[4].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[4].Level %</span>
                                    </div>
                                </div>
                            }
                            @if (@Model.Skill[5].Name != null && @Model.Skill[5].Level != null)
                            {
                                <div class="mb-2">
                                    <span>@Model.Skill[5].Name</span>
                                    <div class="progress my-1" style="height:25px">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skill[5].Level" aria-valuemin="20" aria-valuemax="100" style="height:30px; width: @Model.Skill[5].Level%"></div><span class="progress-value" style="margin-left:10px">@Model.Skill[5].Level %</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <hr class="d-print-none" />
                <div class="work-experience-section px-3 px-lg-4">
                    <h2 class="h3 mb-4" style="margin-top:40px">Work Experience</h2>
                    <div class="timeline" style="padding-left:50px;">
                        @if (@Model.Experiences[0].CompanyName != null && @Model.Experiences[0].StartDate != null && @Model.Experiences[0].EndDate != null && @Model.Experiences[0].JobTitle != null && @Model.Experiences[0].Details != null)
                        {
                            <div class="timeline-card timeline-card-primary card shadow-sm">
                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Experiences[0].JobTitle <span class="text-muted h6">at @Model.Experiences[0].CompanyName</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Experiences[0].StartDate - @Model.Experiences[0].EndDate</div>
                                    <div>@Model.Experiences[0].Details</div>
                                </div>
                            </div>
                        }
                        @if (@Model.Experiences[1].CompanyName != null && @Model.Experiences[1].StartDate != null && @Model.Experiences[1].EndDate != null && @Model.Experiences[01].JobTitle != null && @Model.Experiences[1].Details != null)
                        {
                            <div class="timeline-card timeline-card-primary card shadow-sm">
                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Experiences[1].JobTitle <span class="text-muted h6">at @Model.Experiences[1].CompanyName</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Experiences[1].StartDate - @Model.Experiences[1].EndDate</div>
                                    <div>@Model.Experiences[1].Details</div>
                                </div>
                            </div>
                        }
                        @if (@Model.Experiences[2].CompanyName != null && @Model.Experiences[2].StartDate != null && @Model.Experiences[2].EndDate != null && @Model.Experiences[2].JobTitle != null && @Model.Experiences[2].Details != null)
                        {
                            <div class="timeline-card timeline-card-primary card shadow-sm">
                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Experiences[2].JobTitle <span class="text-muted h6">at @Model.Experiences[2].CompanyName</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Experiences[2].StartDate - @Model.Experiences[2].EndDate</div>
                                    <div>@Model.Experiences[2].Details</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <hr class="d-print-none" />
                <div class="page-break"></div>
                <div class="education-section px-3 px-lg-4 pb-4">
                    <h2 class="h3 mb-4" style="margin-top: 30px;">Projects</h2>
                    <div class="timeline">
                        @if (@Model.Projects[0].Title != null && @Model.Projects[0].Description != null && @Model.Projects[0].Link != null && @Model.Projects[0].EndDate != null)
                        {
                        <div class="timeline-card timeline-card-success card shadow-sm">

                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Projects[0].Title <span class="text-muted h6">Resource: @Model.Projects[0].Link</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Projects[0].EndDate</div>
                                    <div>@Model.Projects[0].Description</div>
                                </div>

                                </div>
                            }
                            @if (@Model.Projects[1].Title != null && @Model.Projects[1].Description != null && @Model.Projects[1].Link != null && @Model.Projects[1].EndDate != null)
                            {
                        <div class="timeline-card timeline-card-success card shadow-sm">
                            
                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Projects[1].Title <span class="text-muted h6">Resource: @Model.Projects[1].Link</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Projects[1].EndDate</div>
                                    <div>@Model.Projects[1].Description</div>
                                </div>

                                </div>
                            }
                            @if (@Model.Projects[2].Title != null && @Model.Projects[2].Description != null && @Model.Projects[2].Link != null && @Model.Projects[2].EndDate != null)
                        {
                            <div class="timeline-card timeline-card-success card shadow-sm">

                                <div class="card-body">
                                    <div class="h5 mb-1">@Model.Projects[2].Title <span class="text-muted h6">Resource: @Model.Projects[2].Link</span></div>
                                    <div class="text-muted text-small mb-2">@Model.Projects[2].EndDate</div>
                                    <div>@Model.Projects[2].Description</div>

                                </div>

                            </div>
                        }
                    </div>
                </div>




            </div>
        </div>
    </div>

    <script src="/js/template2/bootstrap.bundle.min.js?ver=1.2.0"></script>
    <script src="/js/template2/aos.js?ver=1.2.0"></script>
    <script src="/js/template2/main.js?ver=1.2.0"></script>
</body>
</html>

