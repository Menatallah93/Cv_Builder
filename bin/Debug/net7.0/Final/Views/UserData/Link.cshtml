@using Final.ViewModel;
@model UserData

@{
    Layout = "_UserDataLayout";
    ViewData["Title"] = "Link";
}

<h1>Links</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="createCv" asp-controller="UserData" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
          @*  links*@
            <div class="form-group">
                <label asp-for="@Model.Links.Linkedin" class="control-label" style="font-size: 25px;"></label>
                <input asp-for="@Model.Links.Linkedin" class="form-control" style="width:400px;font-size: 21px;" />
                <span asp-validation-for="@Model.Links.Linkedin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Links.GitHub" class="control-label" style="font-size: 25px;"></label>
                <input asp-for="@Model.Links.GitHub" class="form-control" style="width:400px;font-size: 21px;" />
                <span asp-validation-for="@Model.Links.GitHub" class="text-danger"></span>
            </div>

            
            @*personal info*@
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Address" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Address" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Age" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Age" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Languages" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Languages" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Phone" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Phone" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Photo" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Photo" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Name" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Name" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.Email" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.Email" class="form-control"/>

            </div>
            <div class="form-group">

                <input hidden type="text" value="@Model.PersonalInfo.JobTitle" style="height: 140px;width: 450px;" asp-for="@Model.PersonalInfo.JobTitle" class="form-control"/>

            </div>
            @* cover letter*@
            <div class="form-group">
                <textarea hidden value="@Model.CoverLetter" style="height: 140px;width: 450px;" asp-for="@Model.CoverLetter" class="form-control"></textarea>

            </div>

            @* skills*@
            @for (int i = 0; i < Model.Skill.Count; i++)
            {


                <div class="form-group ">

                    <input hidden value="@Model.Skill[i].Name" asp-for="@Model.Skill[i].Name" id="SkillName" class="form-control" style="width:100%" />

                </div>

                <div class="form-group ">

                    <input hidden value="@Model.Skill[i].Level" asp-for="@Model.Skill[i].Level" type="range" min="20" max="100" step="20" style="width:100%" />

                </div>



            }
            @* experience*@
            @for (int i = 0; i < Model.Experiences.Count; i++)
            {
                <div class="form-group ">
                    <input hidden value="@Model.Experiences[i].CompanyName" asp-for="@Model.Experiences[i].CompanyName" class="form-control" style="width:250px" />
                </div>
                <div class="form-group ">
                    <input hidden value="@Model.Experiences[i].JobTitle" asp-for="@Model.Experiences[i].JobTitle" class="form-control" style="width:250px" />
                </div>
                <div class="form-group ">
                    <input hidden value="@Model.Experiences[i].StartDate" asp-for="@Model.Experiences[i].StartDate" class="form-control" style="width:250px" />
                </div>
                <div class="form-group ">
                    <input hidden value="@Model.Experiences[i].EndDate" asp-for="@Model.Experiences[i].EndDate" class="form-control" style="width:250px" />
                </div>
                <div class="form-group">
                    <textarea hidden value="@Model.Experiences[i].Details" asp-for="@Model.Experiences[i].Details" class="form-control" style="height: 140px;width: 450px;"></textarea>
                </div>

            }

            @*projects*@
            @for (int i = 0; i < Model.Projects.Count; i++)
            {
                <div class="form-group">
                    <input hidden value="@Model.Projects[i].Title" asp-for="@Model.Projects[i].Title" class="form-control"  style="width:250px">
                </div>
                <div class="form-group">
                    <textarea hidden value="@Model.Projects[i].Description" asp-for="@Model.Projects[i].Description" class="form-control" style="height: 140px;width: 450px;"></textarea>
                </div>
                <div class="form-group">
                    <input hidden value="@Model.Projects[i].EndDate" asp-for="@Model.Projects[i].EndDate" class="form-control" style="width:250px" />
                </div>
                <div class="form-group">
                  
                    <input hidden value="@Model.Projects[i].Link" asp-for="@Model.Projects[i].Link" class="form-control" style="width:250px" />
                </div>


            }
           
            <div class="form-group">
                <br />
                <input type="submit" value="Next" class="btn " style="background-color:#eb5d1e;color:white" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
